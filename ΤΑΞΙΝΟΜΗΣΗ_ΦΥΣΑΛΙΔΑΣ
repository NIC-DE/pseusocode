акцояихлос bubble_sort

стахеяес

N=10;


дедолема
  I, K, TEMP: INTEGER;
  P: ARRAY [1..N] OF INTEGER ;
  
  аявг 
  
  циа I:=1 еыс N епамакабе
   тупысе("дысе стоивеиO пимайA ",I,EOLN);
   диабасе(P[I]);      
  циа-текос;   
  
  циа I:=1 еыс N-1 епамакабе 
       циа K:=N еыс I+1 ле-бгла -1 епамакабе 	   
	      еам (P[K]<P[K-1]) тоте  
	       TEMP:=P[K-1];
	       P[K-1]:=P[K]; 
           P[K]:=TEMP ;
	      еам-текос 
		  
       циа-текос 
  циа-текос
  
  циа I:=1 еыс N епамакабе
  тупысе("о танимолглемос пимайас:",P[I]);
тупысе("\n");
циа-текос  
текос 
 